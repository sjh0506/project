import java.util.Scanner;

public class Main{
    public static void main(String[] args){
    	Scanner in = new Scanner(System.in);
    	
    	int sec_input,hour,min,sec;
    	
    	System.out.print("초 입력:");
    	sec_input = in.nextInt();
    	hour = sec_input / 3600;
    	sec_input %= 3600;
    	min = sec_input/60;
    	sec_input %= 60;
    	sec = sec_input;
    	System.out.printf("%d시간 %d분 %d분",hour,min,sec);
    }
}
