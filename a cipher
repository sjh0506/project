import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);

		System.out.print("0~999 사이의 숫자를 입력하세요 : ");
		int answer = in.nextInt();
		
		int x = (answer) / 100;
		int y = (answer % 100) / 10;
		int z = (answer % 100) % 10;
		
		System.out.printf("각자릿수의 합 %d",x+y+z);
	}
}
